@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div>
        <input type="text" id="txtName" value="">
        <input type="text" id="txtRemark" value="" />
        <input type="button" id="btnSearch" value="搜索" />
        <table id="dg"></table>
    </div>
    <!---------------------------------------添加信息-------------------------------------------------------->
    <div id="addDiv">
        @using (Ajax.BeginForm("AddUserInfo", new { }, new AjaxOptions()
        {
            Confirm = "你确定添加吗？",
            HttpMethod = "post",
            OnSuccess = "afterAdd"
        }, new { id = "addForm" }))
        {
            <table>
                <tr>
                    <td>用户名：</td>
                    <td><input type="text" name="UName" /></td>
                </tr>
                <tr>
                    <td>密码：</td>
                    <td><input type="password" name="UPwd" /></td>
                </tr>
                <tr>
                    <td>备注：</td>
                    <td><input type="text" name="Remark" /></td>
                </tr>
            </table>
        }
    </div>
    <!---------------------------------------添加信息结束---------------------------------------------------->
    <!---------------------------------------修改信息-------------------------------------------------------->
    <div id="editDiv">
        @using (Ajax.BeginForm("EditUserInfo", new { }, new AjaxOptions()
        {
            Confirm = "你确定添加吗？",
            HttpMethod = "post",
            OnSuccess = "afterEdit"
        }, new { id = "editForm" }))
        {
            <input type="hidden" name="ID" id="txtId" />
            <input type="hidden" name="SubTime" id="txtSubTime" />
            <table>
                <tr>
                    <td>用户名：</td>
                    <td><input type="text" name="UName" id="txtName" /></td>
                </tr>
                <tr>
                    <td>密码：</td>
                    <td><input type="text" name="UPwd" id="txtPwd" /></td>
                </tr>
                <tr>
                    <td>状态：</td>
                    <td><input type="text" name="DelFlag" id="txtDelFlag" /></td>
                </tr>
                <tr>
                    <td>排序：</td>
                    <td><input type="text" name="Sort" id="txtSort" /></td>
                </tr>
                <tr>
                    <td>备注：</td>
                    <td><input type="text" name="Remark" id="txtRemark" /></td>
                </tr>
            </table>
        }
    </div>
    <!---------------------------------------添加信息结束---------------------------------------------------->
    <script>
        var pars;
        $(function () {
            $("#addDiv").css("display", "none");
            $("#editDiv").css("display", "none");
            $("#btnSearch").click(function () {
                 pars = {
                    name: $("#txtName").val(),
                    remark:$("#txtReamrk").val()
                 }
                 loadData(pars);
            });
            loadData(pars);
        });
        function loadData(pars) {
            $('#dg').datagrid({
                url: '/UserInfo/GetUserInfo',
                title: '用户数据表格',
                width: 700,
                height: 400,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载用户的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 5,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [5, 10, 15],
                queryParams: pars,//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'ID', title: '编号', width: 80 },
                    { field: 'UName', title: '姓名', width: 120 },
                    { field: 'UPwd', title: '密码', width: 120 },
                    { field: 'Remark', title: '备注', width: 120 },
                    {
                        field: 'SubTime', title: '时间', width: 80, align: 'right',
                        formatter: function (value, row, index) {
                            return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d");
                        }
                    }

                ]],
                toolbar: [{
                    id: "btnDelete",
                    text: "删除",
                    iconCls: "icon-remove",
                    handler: function () {
                        deleteInfo();
                    }
                },
                {
                    id: "btnAdd",
                    text: "增加",
                    iconCls: "icon-add",
                    handler: function () {
                        addInfo();
                    }
                },
                {
                    id: "btnEdit",
                    text: "编辑",
                    iconCls: "icon-edit",
                    handler: function () {
                        editInfo();
                    }
                }
                ]
            });
        }
        //将序列化成json格式后日期(毫秒数)转成日期格式
        function ChangeDateFormat(cellval) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }
        //修改信息
        function editInfo()
        {
            var rows = $("#dg").datagrid("getSelections");
            if (rows.length != 1)
            {
                $.messager.alert("提示", "会修改吗？", "error");
                return;
            }
            $("#editDiv").css("display", "block");
            $("#txtName").val(rows[0].UName);
            $("#txtPwd").val(rows[0].UPwd);
            $("#txtRemark").val(rows[0].Remark); 
            $("#txtId").val(rows[0].ID);
            $("#txtSubTime").val(ChangeDateFormat(rows[0].SubTime));
            $("#txtDelFlag").val(rows[0].DelFlag);
            $("#txtSort").val(rows[0].Sort);
            $("#editDiv").dialog({
                title: "修改信息",
                collapsible: true,
                width: 300,
                height: 220,
                modal: true,
                buttons: [
                    {
                        text: "OK",
                        iconCls: "icon-ok",
                        handler: function () {
                            $("#editForm").submit();
                           
                        }
                    },
                    {
                        text: "Cancel",
                        iconCls: "icon-cancel",
                        handler: function () {
                            $("#addDiv").dialog("close");
                        }
                    }
                ]
            });
        }
        //添加信息
        function addInfo() {
            $("#addDiv").css("display", "block");
            $("#addDiv").dialog({
                title: "添加信息",
                collapsible: true,
                width: 300,
                height: 200,
                modal: true,
                buttons: [
                    {
                        text: "OK",
                        iconCls: "icon-ok",
                        handler: function () {
                            $("#addForm").submit();//提交表单
                        }
                    },
                    {
                        text: "Cancel",
                        iconCls: "icon-cancel",
                        handler: function () {
                            $("#addDiv").dialog("close");
                        }
                    }
                ]
            });
        }
        //添加成功后执行的方法
        function afterAdd(ss) {
            if (ss == "ok") {
                $("#addDiv").dialog("close");
                $("#dg").datagrid("reload");//重新加载
            }
            else
            {
                alert("添加失败！");
            }
        } 
        //修改成功后执行的方法
        function afterEdit(ss) {
            if (ss == "ok") {
                $("#editDiv").dialog("close");
                $("#dg").datagrid("reload");//重新加载
            }
            else {
                alert("添加失败！");
            }
        }
        //删除信息
        function deleteInfo() {
            var rows = $("#dg").datagrid("getSelections");
            if (!rows || rows.length == 0) {
                $.messager.alert("消息", "请选择数据！", "error");
                return;
            }
            $.messager.confirm("提示", "确定删除吗？", function (s) {
                if (s)//如果点击了确定
                {
                    var strId = "";//获取要删除记录的编号
                    for (var i = 0; i < rows.length; i++) {
                        strId = strId + rows[i].ID + ",";
                    }
                    strId = strId.substr(0, strId.length - 1);
                    $.post("/UserInfo/DeleteUserInfo", { "strId": strId }, function (data) {
                        if (data == "ok") {
                            $("#dg").datagrid("reload");//重新加载
                            $("#dg").datagrid("clearSelections");//清除所有选择的行
                        }
                        else {

                        }
                    })
                }
            });
        }
    </script>
</body>
</html>
